{
  "name": "mailing-service",
  "version": "1.0.0",
  "description": "mailing service to be used by backend apps",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "node --env-file .env build/index.js",
    "dev": "npx tsx watch --env-file .env app/index.ts",
    "kafka": "docker compose up -d",
    "stop-kafka": "docker compose down",
    "create-topic": "node -e \"import('./kafka-admin.js').then((x)=>x.setupKafkaTopics())\"",
    "prestart": "npm run build && npm run kafka && npm run create-topic"
  },
  "keywords": [
    "mailing-service"
  ],
  "author": "Harsh Dagar (hdxdev.in)",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jose": "^5.6.2",
    "kafkajs": "^2.2.4",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.15",
    "typescript": "^5.5.2"
  }
}
